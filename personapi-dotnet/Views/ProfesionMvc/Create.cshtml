@model personapi_dotnet.Models.Entities.Profesion

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Profesion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo Nombre -->
            <div class="form-group">
                <label asp-for="Nom" class="control-label">Nombre</label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <!-- Campo Descripción -->
            <div class="form-group">
                <label asp-for="Des" class="control-label">Descripcion</label>
                <input asp-for="Des" class="form-control" />
                <span asp-validation-for="Des" class="text-danger"></span>
            </div>

            <!-- Botón de enviar -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
